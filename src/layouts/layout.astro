---
// src/layouts/Layout.astro
import '../styles/global.css'; // <-- Importation du style
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
	title: string; // Titre de l'onglet
    description: string; // MÃ©ta-description
}
const { title, description } = Astro.props;
---
<!doctype html>
<html lang="fr" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title} - Younes TICHOUA, Enseignant Informatique</title>
	</head>
	<body class="bg-gray-50 dark:bg-gray-900 text-gray-800 dark:text-gray-200 min-h-screen flex flex-col font-sans">
		<Header />
		
		<main class="container mx-auto px-4 py-12 flex-grow max-w-5xl">
			<slot />
		</main>

		<Footer />
	</body>
</html>